<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.insurance.insuranceapp.Activites.HospitalBlockActivity">

    <RelativeLayout
        android:id="@+id/RelativeLayout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ViewFlipper
            android:id="@+id/ViewFlipper01"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/rounded_border_edittext">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/reaal"
                    android:padding="5dp"

                    >


                    <TextView
                        android:id="@+id/file_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/title1"
                        android:text="Choose File"
                        android:layout_marginTop="3dp"
                        android:padding="3dp"
                        android:fontFamily="@font/verdana"
                        android:textColor="@color/Black"
                        android:textSize="16dp"
                        android:background="@drawable/rounded_border_edittext"/>

                    <TextView
                        android:id="@+id/filename1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/file_1"
                        android:layout_alignBottom="@+id/file_1"
                        android:layout_marginLeft="11dp"
                        android:layout_marginStart="11dp"
                        android:layout_toEndOf="@+id/file_1"
                        android:layout_toRightOf="@+id/file_1"
                        android:fontFamily="@font/verdana"
                        android:textSize="12dp"
                        android:text="No file chosen  File Should be pdf/doc Format"
                        android:textColor="@color/Black" />

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/verdana"
                        android:textSize="13dp"
                        android:paddingTop="2dp"
                        android:textColor="@color/Black"
                        android:text="Company Authorization Letter towards the hospital *" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/rea"
                    android:layout_below="@+id/reaal"
                    android:padding="5dp"

                    >


                    <TextView
                        android:id="@+id/file2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/title2"
                        android:text="Choose File"
                        android:layout_marginTop="3dp"
                        android:padding="3dp"
                        android:fontFamily="@font/verdana"
                        android:textColor="@color/Black"
                        android:textSize="16dp"
                        android:background="@drawable/rounded_border_edittext"/>

                    <TextView
                        android:id="@+id/filename2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/file2"
                        android:layout_alignBottom="@+id/file2"
                        android:layout_marginLeft="11dp"
                        android:layout_marginStart="11dp"
                        android:layout_toEndOf="@+id/file2"
                        android:layout_toRightOf="@+id/file2"
                        android:fontFamily="@font/verdana"
                        android:textSize="12dp"
                        android:text="No file chosen  File Should be pdf/doc Format"
                        android:textColor="@color/Black" />

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/verdana"
                        android:textSize="13dp"
                        android:paddingTop="2dp"
                        android:textColor="@color/Black"
                        android:text="Investigation report form *" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/real"
                    android:layout_below="@+id/rea"
                    android:padding="5dp"

                    >
                    <TextView
                        android:id="@+id/file3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/title3"
                        android:text="Choose File"
                        android:layout_marginTop="3dp"
                        android:padding="3dp"
                        android:fontFamily="@font/verdana"
                        android:textColor="@color/Black"
                        android:textSize="16dp"
                        android:background="@drawable/rounded_border_edittext"/>

                    <TextView
                        android:id="@+id/filename3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/file3"
                        android:layout_alignBottom="@+id/file3"
                        android:layout_marginLeft="11dp"
                        android:layout_marginStart="11dp"
                        android:layout_toEndOf="@+id/file3"
                        android:layout_toRightOf="@+id/file3"
                        android:fontFamily="@font/verdana"
                        android:textSize="12dp"
                        android:text="No file chosen  File Should be pdf/doc Format"
                        android:textColor="@color/Black" />

                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/verdana"
                        android:textSize="13dp"
                        android:paddingTop="2dp"
                        android:textColor="@color/Black"
                        android:text="Treating doctor Questionnaire *" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/reala"
                    android:layout_below="@+id/real"
                    android:padding="5dp"

                    >
                    <TextView
                        android:id="@+id/file4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/title4"
                        android:text="Choose File"
                        android:layout_marginTop="3dp"
                        android:padding="3dp"
                        android:fontFamily="@font/verdana"
                        android:textColor="@color/Black"
                        android:textSize="16dp"
                        android:background="@drawable/rounded_border_edittext"/>

                    <TextView
                        android:id="@+id/filename4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/file4"
                        android:layout_alignBottom="@+id/file4"
                        android:layout_marginLeft="11dp"
                        android:layout_marginStart="11dp"
                        android:textSize="12dp"
                        android:layout_toEndOf="@+id/file4"
                        android:layout_toRightOf="@+id/file4"
                        android:fontFamily="@font/verdana"
                        android:text="No file chosen  File Should be pdf/doc Format"
                        android:textColor="@color/Black" />

                    <TextView
                        android:id="@+id/title4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/verdana"
                        android:textSize="13dp"
                        android:paddingTop="2dp"
                        android:textColor="@color/Black"
                        android:text="Case sheet *" />

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/news_title"
                    layout="@layout/activity_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>


        </ViewFlipper>
    </RelativeLayout>

</ScrollView>
