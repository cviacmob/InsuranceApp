<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.insurance.insuranceapp.Activites.MainActivity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearlayout"
        android:paddingBottom="14dp"
        android:weightSum="3"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingTop="3dp"
            android:padding="5dp"
            android:background="@drawable/rounded_border_edittext">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payments"
                android:fontFamily="@font/verdana"
                android:textColor="@color/Black"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="23dp"
                android:text="Total Amount Rs: "
                android:textColor="@color/Black"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"/>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/rounded_border_edittext"
            android:padding="5dp">
            >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cases"
                android:fontFamily="@font/verdana"
                android:textColor="@color/Black"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tx_pendincase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="21dp"
                android:text="Pending Cases : "
                android:textColor="@color/Black"

                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tx_pendincase"
                android:layout_marginTop="18dp"
                android:text="Save and Submitted Cases : "
                android:textColor="@color/Black"

                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Completed Cases : "
                android:textColor="@color/Black"
                android:textSize="14sp"/>
        </RelativeLayout>





    </LinearLayout>


</ScrollView>
